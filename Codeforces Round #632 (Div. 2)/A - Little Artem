const int mod = 1e9 + 7;
const ll  Inf = (ll)2e18 + 5;
const int N   = 2e5 + 5;

int solve() 
{
	//happy coding
	int n,m;
	cin>>n>>m;

	cout<<'W';
	for(int i=0;i<n;i++){
		if(i==0){
			for(int j=1;j<m;j++){
			cout<<'B';
		}cout<<endl;
		}else{
			for(int j=0;j<m;j++){
			cout<<'B';
		}cout<<endl;
		}
	}
	

	return 0;
}
int main(){
	int test = 1;
	scanf("%d", &test);
	while (test--)solve();return 0;
}
